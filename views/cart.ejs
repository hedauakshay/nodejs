<!DOCTYPE html>
<html lang="en" ng-app="myApp"  >
<head>
    <!-- META -->
    <meta charset="utf-8">
    <script src= "http://ajax.googleapis.com/ajax/libs/angularjs/1.4.6/angular.min.js"></script> 
	<link rel='stylesheet' href='/stylesheets/style.css' />
    <meta name="viewport" content="width=device-width, initial-scale=1"><!-- Optimize mobile viewport -->

    <title><%= title %></title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css"><!-- load bootstrap -->
    <style>
        html                    { overflow-y:scroll; }
        body                    { padding-top:50px; }
        #todo-list              { margin-bottom:30px; }
        input.ng-invalid		{border:1px solid red;}
    </style>

    <!-- SPELLS -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script><!-- load jquery -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.8/angular.min.js"></script><!-- load angular -->
    <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.4.0/angular-messages.js"></script>
    <script src="//code.angularjs.org/1.3.8/angular.js"></script>
    <script src="//code.angularjs.org/1.3.8/angular-route.js"></script>    
    <script src="script/func.js"></script>
</head>
  <body ng-controller="rest">
		<div id="notify">
				<div id="message">ADDED SUCCESSFULLY</div>
		</div>
		<div class="container-fluid">
		    <div class="row">
		        <div class="col-lg-6">
		        	<form id="calc" method="post" action="/">
		            <ul class="list_menu">
		            	<div class="menu_items clearfix">
		            		<h3>Chicken Burritos</h3>
		            		<h4>Price : $21
		            		<button class="btn btn-info pull-right" ng-click="buyItem('Chicken Burritos','21')" onclick="status()">Add to menu</button>
		            		</h4>	
		            	</div>
		            </ul>
		            <ul class="list_menu">
		            	<div class="menu_items clearfix">
		            		<h3>Cheese Burger</h3>
		            		<h4>Price : $14
		            		<button class="btn btn-info pull-right" name="l1" value="maal2" ng-model="quant" ng-click="buyItem('Cheese Burger','14')" onclick="status()">Add to menu</button>
		            		</h4>
		            	</div>
		            </ul>
		            <ul class="list_menu">
		            	<div class="menu_items clearfix">
		            		<h3>Pasta</h3>
		            		<h4>Price : $18
		            		<button class="btn btn-info pull-right" ng-model="quant" ng-click="buyItem('Pasta','18')" onclick="status()">Add to menu</button>
		            		</h4>
		            	</div>
		            </ul>
		            <ul class="list_menu">
		            	<div class="menu_items clearfix">
		            		<h3>Cheesy Nachos</h3>
		            		<h4>Price : $8
		            		<button class="btn btn-info pull-right" ng-model="quant" ng-click="buyItem('Cheesy Nachos','8')" onclick="status()">Add to menu</button>
		            		</h4>
		            	</div>
		            </ul>
		            <button type="submit" class="btn btn-success " ng-click="viewAll()">SUBMIT ORDER</button>
		            </form>
		        </div>
		        <div class="col-lg-6">
		        	<h2>CART</h2>
		        	<ul class="list_menu"  ng-show="myvalue">
		            	<table class="table table-striped">
					    <thead>
					      <tr>
					        <th><h4>Item</h4></th>
					        <th><h4>Price</h4></th>
					      </tr>
					    </thead>
					    <tbody  data-ng-repeat="item in menu">
					      <tr>
					        <td>{{ item.value }}</td>
					        <td>${{ item.key }}</td>
					      </tr>
					    </tbody>
					  </table>
					  <hr>
					  	<table class="table table-striped">
					    <thead>
					      <tr>
		            		<th><h4> Quantity : {{ quant }}</h4><th>
		            		<th><h4> Total : ${{ total }}</h4><th>
		            	</thead>
					      </tr>
		            </ul>
		        </div>
		    </div>
		</div>
  	
  </body>
  

</html>
